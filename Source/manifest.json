{
	"manifest_version": 2,
	"name": "Cloud To Butt Plus",
	"version": "1.2",
	"description": "Replaces the text 'the cloud' with 'my butt', as well as 'cloud' with 'butt' in certain contexts.",
	"browser_action": {
		"default_icon": {
			"19": "images/enabled-icon-19.png"
			//"38": "images/icon38.png"
		},
		"default_popup": "popup.html",
		"default_title": "Fluffify"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"permissions": [
		"storage"
	],
	"background": {
		"scripts": [
					"js/background.js",
					"js/jquery-2.1.3.min.js"
				]
	},
	"content_scripts":
	[
		{
			"matches": ["*://*/*"],
			"js": [
				"jquery-2.1.3.min.js",
				"js/jquery-2.1.3.min.js",
				"js/content_script.js"
			],
			"run_at": "document_end"
		}
	]
}

